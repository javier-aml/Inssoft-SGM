<!-- Modal -->
<div class="modal fade" id="CambiarIMG" tabindex="-1" aria-labelledby="CambiarIMGLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="CambiarIMGLabel">Cambiar IMG</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
                 <form id="equipoIMG" enctype="multipart/form-data">
          <input class="form-control col-12" name="task" type="file" accept="image/*"  id="formFile">
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-primary" data-id="{{id}}" id="addIMGM">Agregar imagen</button>
      </div>
    </div>
